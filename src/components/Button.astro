---
import clsx from 'clsx';
export type Props = astroHTML.JSX.AnchorHTMLAttributes;

const { class: className, ...props } = Astro.props as Props;
---

<a
	class={clsx(
		'inline-flex items-center gap-x-2 rounded py-2 px-4 font-bold text-blue-600 shadow-none outline-none ring-4 ring-transparent transition-all duration-200 hover:bg-blue-400/20 hover:text-blue-800 focus-visible:ring-4 focus-visible:ring-blue-400 active:shadow-inner active:ring-4 active:ring-blue-200/70 dark:text-blue-200 dark:hover:bg-blue-500/20 dark:hover:text-blue-100 dark:focus-visible:ring-blue-500/50 dark:active:ring-blue-500/10',
		className
	)}
	{...props}
>
	<slot name="icon" />
	<slot />
</a>
