---
export interface Props {
	title: string;
}

const { title } = Astro.props as Props;
---

<details class="group mx-2 rounded-lg bg-slate-200 p-8 px-4 py-1 dark:bg-slate-800 sm:mx-4">
	<summary
		class="rounded bg-gradient-to-br from-blue-700 to-purple-600 bg-clip-text font-bold text-transparent dark:from-blue-400 dark:to-purple-400"
		>{title}</summary
	>

	<slot />
</details>
